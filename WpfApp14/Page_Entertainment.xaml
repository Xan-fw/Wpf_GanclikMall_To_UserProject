<Page x:Class="WpfApp6.Page_Entertainment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Entertainment">
    <ScrollViewer>
        <Grid Background="WhiteSmoke" Panel.ZIndex="2">
            <StackPanel>
                <TextBlock Foreground="Gray" Grid.Row="0" Width="300" Margin="120,100,0,0"  FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16">BRANDS   FOR   ALL   YOUR   NEEDS</TextBlock>
                <TextBlock x:Name="Entertainment_textBlock" Foreground="Black" Width="330" FontSize="50" FontFamily="Bahnschrift SemiBold"><Run Text="Entertainment"/></TextBlock>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <WrapPanel x:Name="WrapPanel_Page_Entertainment" Grid.Column="1">
                    </WrapPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
